// Definição do Cliente Prisma (JavaScript/TypeScript)
generator client {
  provider = "prisma-client-js"
}

// Conexão com o Banco de Dados
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS (Opções fixas) ---

enum Role {
  CLIENT
  ANALYST
  ADMIN
}

enum OrderStatus {
  AWAITING_QUOTE  // Aguardando Orçamento
  PENDING         // Pendente de Pagamento
  IN_PROGRESS     // Em Análise/Andamento
  COMPLETED       // Concluído
  CANCELED        // Cancelado
}

// --- MODELS (Tabelas) ---

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String?   // Senha criptografada (nulo se for login social)
  name          String
  role          Role      @default(CLIENT)
  
  // Dados de Perfil
  cpf           String?
  phone         String?   // Importante para WhatsApp
  address       String?
  birthDate     String?   
  
  // Controle de Acesso
  isVerified    Boolean   @default(false)
  googleId      String?   @unique
  appleId       String?   @unique
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relacionamentos
  orders        Order[]   @relation("ClientOrders")
  workedOrders  Order[]   @relation("AnalystOrders")
  messages      Message[]
}

model Service {
  id          String  @id // Ex: 'qualified_search'
  name        String
  basePrice   Decimal?    // Se null, requer orçamento
  orders      Order[]
}

model Order {
  id              String      @id @default(uuid())
  readableId      Int         @default(autoincrement()) // ID legível (Ex: Pedido 1, 2...)
  
  // Relacionamento com Cliente
  clientId        String
  client          User        @relation("ClientOrders", fields: [clientId], references: [id])
  
  // Relacionamento com Serviço
  serviceId       String
  service         Service     @relation(fields: [serviceId], references: [id])
  
  // Relacionamento com Analista (opcional no início)
  analystId       String?
  analyst         User?       @relation("AnalystOrders", fields: [analystId], references: [id])
  
  status          OrderStatus @default(AWAITING_QUOTE)
  totalAmount     Decimal     @default(0.00)
  
  // Campos Dinâmicos (Salva o formulário específico de cada serviço)
  details         Json        
  description     String?     // Texto livre do cliente
  
  // Integração de Pagamento
  paymentId       String?     @unique
  paymentMethod   String?     // 'pix', 'credit_card'
  paymentConfirmedAt DateTime?
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  // Arquivos e Mensagens
  documents       Document[]
  messages        Message[]
}

model Document {
  id        String   @id @default(uuid())
  
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  
  name      String   // Nome original do arquivo
  s3Key     String   // URL ou Caminho no S3
  mimeType  String   // Tipo do arquivo (pdf, jpg)
  size      Int      // Tamanho em bytes
  
  isReport  Boolean  @default(false) // Se true, é o relatório final entregue pela Edari
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
  
  content   String
  createdAt DateTime @default(now())
  
  attachmentId String? // Caso a mensagem tenha um anexo
}
